{
  "extends": [
    "airbnb",
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true
  },
  "globals": {
    "before": true,
    "beforeAll": true,
    "describe": true,
    "expect": true,
    "it": true,
    "mount": true,
    "render": true,
    "shallow": true
  },
  "plugins": [
    "react",
    "import"
  ],
  "parser": "babel-eslint",
  "rules": {
    "default-case": 2,
    "eqeqeq": 2,
    "import/no-extraneous-dependencies": [ "error", { "devDependencies": ["**/*_test.js"] } ],
    "no-alert": 2,
    "no-empty": 2,
    "no-invalid-this": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": [ "error", { "max": 1, "maxEOF": 1 } ],
    "no-redeclare": 2,
    "no-useless-call": 2,
    "strict": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "comma-dangle": [
      2,
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "ignore",
        "exports": "ignore",
        "functions": "ignore"
      }
    ],
    "camelcase": 2,
    "array-bracket-spacing": 2,
    "array-callback-return": 2,
    "block-spacing": 2,
    "brace-style": 0,
    "eol-last": 2,
    "func-call-spacing": [
      2,
      "never"
    ],
    "indent": [
      2,
      2
    ],
    "key-spacing": [
      2,
      {
        "afterColon": true,
        "beforeColon": false,
        "mode": "strict"
      }
    ],
    "keyword-spacing": [
      2, {
        "before": true
      }
    ],
    "linebreak-style": [
      0,
      "unix"
    ],
    "newline-before-return": 0,
    "no-nested-ternary": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "object-curly-newline": 0,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "object-shorthand": 2,
    "arrow-body-style": 2,
    "arrow-parens": 2,
    "no-duplicate-imports": 2,
    "no-useless-computed-key": 2,
    "no-useless-constructor": 2,
    "no-var": 2,
    "prefer-const": 2,
    "prefer-destructuring": 2,
    "react/jsx-closing-bracket-location": [
      2,
      {
        "selfClosing": "after-props"
      }
    ],
    "react/jsx-boolean-value": [
      2,
      "never"
    ],
    "react/prop-types": [ 2, { "ignore": ["children"] } ],
    "react/forbid-prop-types": [
      2,
      { "forbid": ["any"] }
    ],
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "jsx-a11y/aria-role": [
      2, {
        "ignoreNonDom": true
      }
    ],
    "jsx-a11y/no-static-element-interactions": [
      0, {}
    ],
    "jsx-a11y/label-has-for": ["error", {
      "required": {
        "some": ["nesting", "id"]
      }
    }],
    "quotes": [2, "single", { "avoidEscape": true }],
    "react/jsx-no-bind": [
      2,
      {
        "ignoreRefs": false,
        "allowArrowFunctions": true,
        "allowBind": true
      }
    ],
    "react/self-closing-comp": [
      2, {
        "component": false,
        "html": false
      }
    ],
    "react/sort-comp": 2,
    "semi": [
      2, "always"
    ],
    "react/no-array-index-key": 1
  },
  "settings": {
    "import/resolver": {
      "webpack": { }
    }
  }
}
